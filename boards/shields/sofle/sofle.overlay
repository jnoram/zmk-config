/ {
    chosen {
        zmk,display = &oled;
    };

    oled: ssd1306@3c {
        compatible = "solomon,ssd1306fb";
        reg = <0x3c>;
        label = "OLED";
        height = <32>;
        width = <128>;
    };
};

&pro_micro_i2c {
    status = "okay";
    clock-frequency = <I2C_BITRATE_STANDARD>;
    sda-pin = <6>; /* change if needed */
    scl-pin = <7>; /* change if needed */
};
